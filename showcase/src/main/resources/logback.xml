<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{36}[%line] - %msg %mdc %n
			</pattern>
		</encoder>
	</appender>

	<!-- 此配置为样例示意, 生产环境一般采用JNDI获取数据源方式 -->
	<appender name="DB" class="ch.qos.logback.classic.db.DBAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<connectionSource class="ch.qos.logback.core.db.DataSourceConnectionSource">
			<dataSource class="org.apache.tomcat.jdbc.pool.DataSource">
				<driverClassName>org.h2.Driver</driverClassName>
				<url>jdbc:h2:file:c:\\h2\\showcase</url>
				<username>sa</username>
				<password></password>
			</dataSource>
		</connectionSource>
	</appender>

	<!-- 建议设置为WARN或更低级别，此Logger主要用于Struts显示以404错误代码返回的Could not find action 
		or result信息，用于排除编码错误 -->
	<logger name="org.apache.struts2.dispatcher" level="WARN"
		additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="DB" />
	</logger>
	<logger name="lab" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="DB" />
	</logger>
	<logger name="jdbc.sqlonly" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<!-- 打印大量结果集对于运行效率影响较大,开发过程建议默认关闭,在遇到问题需要分析问题是可设置为DEBUG -->
	<logger name="jdbc.resultsettable" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="WARN">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="DB" />
	</root>
</configuration> 
